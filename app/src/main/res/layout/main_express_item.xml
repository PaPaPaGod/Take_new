<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:background="@drawable/rectangle"
    android:weightSum="1">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            app:srcCompat="@mipmap/male"
            android:id="@+id/item_portrait" />

        <TextView
            android:textSize="15dp"
            android:text="User"
            android:layout_centerHorizontal="true"
            android:id="@+id/main_express_item_userName"
            android:layout_below="@id/item_portrait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="11.11"
            android:textSize="12dp"
            android:id="@+id/main_express_item_time"
            android:layout_below="@id/main_express_item_userName"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"  />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="199dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="快递公司"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:textColor="#0f0f0f"
                android:text="company"
                android:id="@+id/main_express_item_company" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取件地点"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:textColor="#0f0f0f"
                android:text="takenLocation"
                android:id="@+id/main_express_item_place" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="包裹描述"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:textColor="#0f0f0f"
                android:text="decripiton"
                android:id="@+id/main_express_item_description" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.77">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="19dp">
            <TextView
                android:text="￥有赏金"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/main_express_item_status"
                android:textSize="10dp"
                android:textColor="#ebd731"/>

            <TextView
                android:textStyle="bold"
                android:layout_marginTop="3dp"
                android:text="接单状态"
                android:textSize="10dp"
                android:id="@+id/main_express_item_token_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </RelativeLayout>
</LinearLayout>
