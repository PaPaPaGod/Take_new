<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorTabBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/setting_toolbar"
        layout="@layout/toolbar" />

    <LinearLayout
        android:background="@drawable/setting_background"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <Button
            android:id="@+id/setting_btn_suggest"
            android:text="提交建议"
            style="@style/SettingBtn" />
        <View
            style="@style/Line" />

        <Button
            android:id="@+id/setting_btn_info"
            android:text="修改个人信息"
            style="@style/SettingBtn" />

        <View
            style="@style/Line" />

        <Button
            android:id="@+id/setting_btn_addr"
            android:text="修改常用收货地址"
            style="@style/SettingBtn" />
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:background="@drawable/logout_background"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/setting_btn_logout"
            android:background="@null"
            android:textColor="#FF1D1D"
            android:textSize="16dp"
            android:text="退出登录"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>