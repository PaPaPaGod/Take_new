<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="InfoInputLine">
        <item name="android:background">@drawable/login_input_background</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">315dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">13dp</item>
    </style>

    <style name="InfoInputLineText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textColor">#363636</item>
    </style>

    <style name="SettingBtn">
        <item name="android:background">@null</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#363636</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">23dp</item>
    </style>

    <style name="Line">
        <item name="android:layout_width">348dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#D9D8D9</item>
        <item name="android:layout_gravity">right</item>
    </style>

    <style name="ExpressDetailInfo">
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#575757</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ExpressDetailInfoMsg">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#575757</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="publish_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">41dp</item>
    </style>

    <style name="publish_layout.TextView">
        <item name="android:layout_marginLeft">21dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#343434</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="ItemMainExpress">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#575757</item>
    </style>

    <style name="ItemMainExpress.Detail">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#343434</item>
    </style>

    <style name="SmallGreyTextView">
        <item name="android:textColor">#8C8C8C</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="PagerMsgTag">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#575757</item>
        <item name="android:layout_marginLeft">26dp</item>
    </style>

    <style name="PagerMsgContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#363636</item>
        <item name="android:layout_marginLeft">4dp</item>

    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <!-- android:textColorPrimary is the color of the title text in the Toolbar  -->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!-- actionMenuTextColor is the color of the text of action (menu) items  -->
        <item name="actionMenuTextColor">@android:color/white</item>
        <!-- Tints the input fields like checkboxes and text fields -->
        <item name="colorAccent">@color/colorToolbar</item>
    </style>
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">21dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>